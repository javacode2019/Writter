<html>

<body>
<div>
    <form method="post">
        <input type="text" name="text" placeholder="Enter message">
        <input type="text" name="tag" placeholder="Tag">
        <button type="submit">Submit</button>
    </form>
</div>
<div>Find message by tag:</div>
<form method="post" action="filterByTag">
    <input type="text" name="filterByTag">
    <button type="submit">Find</button>
</form>
<div>List of message:</div>
{{#messages}}
    <div>
        <b>{{id}}</b>
        <span>{{text}}</span>
        <i>{{tag}}</i>
    </div>
{{/messages}}
</body>
</html></html>